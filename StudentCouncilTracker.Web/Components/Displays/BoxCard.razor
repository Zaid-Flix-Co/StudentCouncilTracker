<div class="box-card @BackgroundClass @ShadowClass mb-2">
    <div class="box-card__body">
        <div class="row">
            <div class="col">
                @if (Body != null || ChildContent != null)
                {
                    @Body
                    @ChildContent
                }
            </div>
            @if (ActionTemplate != null)
            {
                <div class="col-auto" style="width: 70px;">
                    <div class="box-card-actions">
                        @ActionTemplate
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string ShadowClass => $"is-{Shadow.ToString().ToLower()}-shadow";

    private string BackgroundClass
    {
        get
        {
            var body = IsDeactivated ? "success" : "warning";
            return $"is-{body}-background";
        }
    }

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;

    [Parameter]
    public RenderFragment Body { get; set; } = null!;

    [Parameter]
    public RenderFragment ActionTemplate { get; set; } = null!;

    [Parameter]
    public BoxCardShadow Shadow { get; set; } = BoxCardShadow.Hover;

    [Parameter]
    public bool IsDeactivated { get; set; }
}
