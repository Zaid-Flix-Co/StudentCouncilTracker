<div class="form-group row">
    <label class="col-sm-2 col-form-label">
        @Label
    </label>
    <div class="col-sm-10">
        <Select DefaultValues="@(Value.Select((s, i) => i.ToString()))" Mode="multiple"
                TItemValue="string"
                TItem="string">
            <SelectOptions>
                @for (var i = 0; i < Value.Count; i++)
                {
                    var index = i.ToString();
                    <SelectOption TItemValue="string" TItem="string" Value="@index" Label=@Value[i]/>
                }
            </SelectOptions>
        </Select>

    </div>
</div>

@code
{
    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public List<string> Value { get; set; }
}